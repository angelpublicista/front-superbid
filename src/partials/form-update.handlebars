                                    <div class="icon-file">
                                        <i class="fas fa-file"></i>
                                        <span class="sb-name-file"></span>
                                    </div>
                                    <label for="upt-field-rut" class="mt-5">RUT Vigente</label>
                                </div>
                            </div>

                            <div class="col-6 col-md-3 wrap-camara-comercio">
                                <div class="sb-group-file position-relative text-center">
                                    <input type="file" accept="image/jpeg,image/jpg,image/png, .pdf" id="upt-field-camara-comercio"
                                        class="sb-input-file input-required" name="upt-field-camara-comercio">
                                    <div class="icon-file">
                                        <i class="fas fa-file"></i>
                                        <span class="sb-name-file"></span>
                                    </div>
                                    <label for="upt-field-camara-comercio" class="mt-5">Cámara de comercio</label>
                                </div>
                            </div>

                            <div class="col-6 col-md-3 wrap-rep-legal">
                                <div class="sb-group-file position-relative text-center">
                                    <input type="file" accept="image/jpeg,image/jpg,image/png, .pdf" id="upt-field-cedula-rep" class="sb-input-file input-required"
                                        name="upt-field-cedula-rep">
                                    <div class="icon-file">
                                        <i class="fas fa-file"></i>
                                        <span class="sb-name-file"></span>
                                    </div>
                                    <label for="upt-field-cedula-rep" class="mt-5">Cédula representante legal</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group form-check mt-4 text-dark">
                    <input type="checkbox" class="form-check-input input-required" id="upt-privacy-policy"
                        value="Acepto las políticas">
                    <label class="form-check-label" for="upt-privacy-policy">He leído y acepto las <a href="/documentos/politicas-de-privacidad.html" target="_blank">políticas de
                            privacidad</a></label>
                </div>
            </div>

            <div class="sb-step-footer d-flex justify-content-between mt-5">
                <button type="button" class="step-button step-button-back btn btn-outline-primary rounded-pill"
                    data-to_step="1" data-step="2">Anterior</button>
                <button type="submit"
                    class="step-button next-step btn btn-primary rounded-pill button-disabled button-submit"
                    data-step="2">Enviar</button>
            </div>
        </div>
    </div>

                                    <div class="icon-file">
                                        <i class="fas fa-file"></i>
                                        <span class="sb-name-file"></span>
                                    </div>
                                    <label for="upt-field-documento" class="mt-5">Documento de identidad</label>
                                </div>
                            </div>

                            <div class="col-6 col-md-3">
                                <div class="sb-group-file position-relative text-center">
